<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="configuration_label_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/normal_padding</item>
        <item name="android:textColor">@color/color_G0</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="configuration_input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_height</item>
        <item name="android:paddingEnd">@dimen/normal_padding</item>
        <item name="android:paddingStart">@dimen/normal_padding</item>
        <item name="android:textColor">@color/color_G1</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
    </style>

</resources>
